---
import { type CollectionEntry, getCollection, render } from 'astro:content';
import BlogPost from '../../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	const paths = [];
	
	// Generate paths for EN posts
	const enPosts = posts.filter((post) => post.id.startsWith('en/'));
	enPosts.forEach((post) => {
		paths.push({
			params: { lang: 'en', slug: post.id.replace('en/', '') },
			props: post,
		});
	});
	
	// Generate paths for JA posts
	const jaPosts = posts.filter((post) => post.id.startsWith('ja/'));
	jaPosts.forEach((post) => {
		paths.push({
			params: { lang: 'ja', slug: post.id.replace('ja/', '') },
			props: post,
		});
	});
	
	return paths;
}

type Props = CollectionEntry<'blog'>;

const post = Astro.props;
const { Content } = await render(post);
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>
