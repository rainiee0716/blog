---
import { Image } from 'astro:assets';
import { getCollection } from 'astro:content';
import BaseHead from '../../components/BaseHead.astro';
import Footer from '../../components/Footer.astro';
import FormattedDate from '../../components/FormattedDate.astro';
import Header from '../../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../../consts';

const posts = (await getCollection('blog')).sort(
	(a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf(),
);
---

<!doctype html>
<html lang="zh-CN">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
		<style>
			.blog-hero {
				display: flex;
				flex-direction: column;
				gap: 1rem;
				margin-bottom: 2.5rem;
			}
			.post-grid {
				list-style: none;
				display: grid;
				grid-template-columns: repeat(3, minmax(0, 1fr));
				gap: 1.5rem;
				margin: 0;
				padding: 0;
			}
			.post-card {
				display: flex;
				flex-direction: column;
				gap: 1rem;
				background: rgba(var(--surface), 0.92);
				border-radius: var(--radius-lg);
				border: 1px solid var(--border);
				padding: 1.2rem;
				box-shadow: var(--shadow);
				transition: transform 0.2s var(--ease-out), box-shadow 0.2s var(--ease-out);
			}
			.post-card:hover {
				transform: translateY(-4px);
				box-shadow: 0 18px 34px rgba(15, 23, 42, 0.16);
			}
			.post-card img {
				box-shadow: none;
			}
			.post-title {
				margin: 0;
				font-size: 1.3rem;
				color: rgb(var(--ink));
			}
			.post-meta {
				color: rgb(var(--ink-soft));
				font-size: 0.9rem;
			}
			.post-link {
				display: flex;
				flex-direction: column;
				gap: 0.8rem;
				color: inherit;
			}
			@media (max-width: 1000px) {
				.post-grid {
					grid-template-columns: repeat(2, minmax(0, 1fr));
				}
			}
			@media (max-width: 720px) {
				.post-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</head>
	<body>
		<Header />
		<main>
			<section class="blog-hero reveal">
				<p class="eyebrow">全部文章</p>
				<h1>职场与 AI 的最新思考</h1>
				<p class="lead">从真实项目经验出发，持续更新方法论与工具实践。</p>
			</section>
			<section>
				<ul class="post-grid">
					{
						posts.map((post, index) => (
							<li class="post-card reveal" style={`--delay: ${index * 60}ms;`}>
								<a class="post-link" href={`/blog/${post.id}/`}>
									{post.data.heroImage && (
										<Image width={720} height={420} src={post.data.heroImage} alt="" />
									)}
									<div>
										<h3 class="post-title">{post.data.title}</h3>
										<p class="post-meta">
											<FormattedDate date={post.data.pubDate} />
										</p>
									</div>
								</a>
							</li>
						))
					}
				</ul>
			</section>
		</main>
		<Footer />
	</body>
</html>
